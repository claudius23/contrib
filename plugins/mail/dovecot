#!@@PERL@@
# -*- perl -*-

=head1 NAME

dovecot - plugin to monitor the dovecot mail server logins

=head1 APPLICABLE SYSTEMS

Hosts running dovecot

=head1 CONFIGURATION

Configuration parameters for @@CONFDIR@@/dovecot,
if you need to override the defaults below:

 [dovecot]
  env.logdir  - Which logfile to use
  env.logfile - What file to read in logdir

=head2 DEFAULT CONFIGURATION

 [dovecot]
  env.logdir  /var/log
  env.logfile mail.log

=head1 AUTHOR

Claudius Herder

=head1 LICENSE

GPLv2

=head1 MAGIC MARKERS

=begin comment

These magic markers are used by munin-node-configure when installing
munin-node.

=end comment

 #%# family=auto
 #%# capabilities=autoconf

=cut

use strict;
use warnings;

use Munin::Plugin;

my $LOGDIR  = (defined($ENV{'logdir'}) ? $ENV{'logdir'} : '/var/log');
my $LOGFILE = (defined($ENV{'logdir'}) ? $ENV{'logfile'} : 'mail.info');

my $logfile = "$LOGDIR/$LOGFILE";

if ( defined($ARGV[0]) and $ARGV[0] eq "autoconf" )
{
    if (-d $LOGDIR)
    {
        if (-f $logfile)
        {
            if (-r $logfile)
            {
                print "yes\n";
                exit 0;
            }
            else
            {
                print "no (logfile '$logfile' not readable)\n";
            }
        }
        else
        {
            print "no (logfile '$logfile' not found)\n";
        }
    }
    else
    {
        print "no (could not find logdir '$LOGDIR')\n";
    }

    exit 0;
}

if ( $ARGV[0] and $ARGV[0] eq "config" )
{
    print "graph_title dovecot filter statistics\n";
    print "graph_vlabel logins / \${graph_period}\n";
    print "graph_category dovecot\n";
    print "graph_scale no\n";
    print "graph_args --base 1000 -l 0\n";
    print "graph_period minute\n";

    print "connected.label connected users\n";
    print "connected.type GAUGE\n";
    print "connected.info Number of users curently connected\n";
    print "imapd.label imap\n";
    print "imapd.type DERIVE\n";
    print "imapd.info Number of unencrypted imapd logins\n";
    print "imapd_secured.label imap secured\n";
    print "imapd_secured.type DERIVE\n";
    print "imapd_secured.info Number of imapd secured logins\n";
    print "imapd_ssl.label imap SSL\n";
    print "imapd_ssl.type DERIVE\n";
    print "imapd_ssl.info Number of imapd SSL logins\n";
    print "imapd_tls.label imap TLS\n";
    print "imapd_tls.type DERIVE\n";
    print "imapd_tls.info Number of imapd TLS logins\n";
    print "pop3d.label pop3\n";
    print "pop3d.type DERIVE\n";
    print "pop3d.info Number of unencrypted pop3d logins\n";
    print "pop3d_secured.label pop3 secured\n";
    print "pop3d_secured.type DERIVE\n";
    print "pop3d_secured.info Number of pop3d secured logins\n";
    print "pop3d_ssl.label pop3 SSL\n";
    print "pop3d_ssl.type DERIVE\n";
    print "pop3d_ssl.info Number of pop3d SSL logins\n";
    print "pop3d_tls.label pop3 TLS\n";
    print "pop3d_tls.type DERIVE\n";
    print "pop3d_tls.info Number of pop3d TLS logins\n";
    print "total.label total\n";
    print "total.type DERIVE\n";
    print "total.info Number of total logins\n";
    exit 0;
}

if (! -f $logfile) 
{
    print "connected.value U\n";
    print "imapd.value U\n";
    print "imapd_secured.value U\n";
    print "imapd_ssl.value U\n";
    print "imapd_tls.value U\n";
    print "pop3d.value U\n";
    print "pop3d_secured.value U\n";
    print "pop3d_ssl.value U\n";
    print "pop3d_tls.value U\n";
    print "total.value U\n";
    exit 0;
}

my ($pos, $disconnects, $imapd, $imapd_secured, 
    $imapd_ssl, $imapd_tls, $pop3d, $pop3d_secured,
    $pop3d_ssl, $pop3d_tls, $total) = restore_state();

$disconnects = 0 unless defined($disconnects);
$imapd = 0 unless defined($imapd);
$imapd_secured = 0 unless defined($imapd_secured);
$imapd_ssl = 0 unless defined($imapd_ssl);
$imapd_tls = 0 unless defined($imapd_tls);
$pop3d = 0 unless defined($pop3d);
$pop3d_secured = 0 unless defined($pop3d_secured);
$pop3d_ssl = 0 unless defined($pop3d_ssl);
$pop3d_tls = 0 unless defined($pop3d_tls);
$total = 0 unless defined($total);

my $startsize = (stat $logfile)[7];

if (!defined $pos)
{
    # Initial run.
    $pos = $startsize;
}

$pos = parseLogfile($logfile, $pos, $startsize);

my $connected = - $disconnects + $total;

print "connected.value $connected\n";
print "imapd.value $imapd\n";
print "imapd_secured.value $imapd_secured\n";
print "imapd_ssl.value $imapd_ssl\n";
print "imapd_tls.value $imapd_tls\n";
print "pop3d.value $pop3d\n";
print "pop3d_secured.value $pop3d_secured\n";
print "pop3d_ssl.value $pop3d_ssl\n";
print "pop3d_tls.value $pop3d_tls\n";
print "total.value $total\n";

save_state($pos, $disconnects, $imapd, $imapd_secured,
    $imapd_ssl, $imapd_tls, $pop3d, $pop3d_secured,
    $pop3d_ssl, $pop3d_tls, $total);

sub parseLogfile 
{    
    my ($fname, $start, $stop) = @_;

    my ($logfd, $reset) = tail_open($fname, $start);

    while (tell($logfd) < $stop) 
    {
        my $line = <$logfd>;
        chomp ($line);

        if($line =~ /dovecot/i) 
        {
            if($line =~ /imap-login/i)
            {
                $total++;

                if($line =~ /secured/i)
                {
                    $imapd_secured++;
                }
                elsif($line =~ /SSL/i) 
                {
                    $imapd_ssl++;
                }
                elsif($line =~ /TLS/i)
                {
                    $imapd_tls++;
                }
                else 
                {
                    $imapd++;
                }
            }
            elsif($line =~ /pop3-login/i)
            {
                $total++;

                if($line =~ /secured/i)
                {
                    $pop3d_secured++;
                }
                elsif($line =~ /SSL/i)
                {
                    $pop3d_ssl++;
                }
                elsif($line =~ /TLS/i)
                {
                    $pop3d_tls++;
                }
                else
                {
                    $pop3d++;
                }
            }
            elsif($line =~ /Disconnected/i)
            {
                $disconnects++;
            }
        }
    }
    return tail_close($logfd);
}

# vim:syntax=perl
